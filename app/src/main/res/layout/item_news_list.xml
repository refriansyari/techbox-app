<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="3dp"
    android:outlineSpotShadowColor="@color/teal_700"
    app:cardCornerRadius="10dp"
    app:cardElevation="12dp"
    app:strokeColor="#DAD8D8"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp">

        <ImageView
            android:id="@+id/iv_show_image"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_profile_photo" />

        <TextView
            android:id="@+id/tv_title_article"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginEnd="12dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iv_show_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="FREEDOM" />

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_light"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/iv_show_image"
            app:layout_constraintTop_toBottomOf="@id/tv_title_article"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />

        <Button
            android:id="@+id/btn_read_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="@string/tv_text_read_more"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_light"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iv_show_image"
            app:layout_constraintTop_toBottomOf="@id/tv_summary" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:text="@string/tv_text_author"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_summary" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>